@model IEnumerable<MyTinyCollege.Models.Course>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@*Added department dropdown list*@
@using (Html.BeginForm())
{
    <div class="form-inline">
        <div class="form-group">
            <h3>Select Department:</h3> @Html.DropDownList("SelectedDepartment", null, "All",
                                       new
                                       {
                                           onchange = "$(this).closest('form').submit();", //when you click on something in the dropdown, it goes to it without having to click on a submit button
                                           @class = "form-control input-sm"
                                       })
        </div>
    </div>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Department.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Credits)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Department.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Credits)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.CourseID }) |
                @Html.ActionLink("Details", "Details", new { id = item.CourseID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.CourseID })
            </td>
        </tr>
    }

</table>

<div>
    @Html.ActionLink("Update course credits", "UpdateCourseCredits")
</div>
